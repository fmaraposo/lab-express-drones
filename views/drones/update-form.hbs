<h2>Update {{drone.name}}</h2>

<form action="/drones/{{drone._id}}/edit" method="POST">
    <label>
        Name
        <input type="text" name="name" value="{{drone.name}}">
    </label>
    <label>
        Propellers
        <input type="number" name="propellers" min="0" value="{{drone.propellers}}">
    </label>
    <label>
        Max Speed
        <input type="number" name="maxSpeed" min="0" value="{{drone.maxSpeed}}">
    </label>
    <button type="submit">Update</button>
</form>